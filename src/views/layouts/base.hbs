<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=aa, initial-scale=1.0">
    <title>GameDev - JuandaDC</title>
    <!--Custom styles-->
    <link rel="stylesheet" href="/css/map01.css">
    <link rel="stylesheet" href="/css/player.css">
</head>

<body>
    <!-- Etiquetas html map -->
    <div class="view-cords">
        <h1>Coordenadas del cubo</h1>
        <p id="value-coords_01"><b>X:</b> 0deg</p>
        <p id="value-coords_02"><b>Y:</b> 0deg</p>
    </div>
    <div class="card">
        <h2>Mouse coords</h2>
        <ul>
            <li id="mouse-coords"><b>X:</b></li>
            <li id="mouse-coords2"><b>Y:</b></li>
        </ul>
    </div>
    <div class="workpace">
        <div class="cube" id="cubet">
            <div class="box" id="head_1"></div>
            <div class="box" id="head_2"></div>
            <div class="box" id="head_3"></div>
            <div class="box" id="head_4"></div>
            <div class="box" id="head_5"></div>
            <div class="box" id="head_6"></div>
        </div>
    </div>
    <div class="control-cords">
        <button class="btn" type="submit" id="btn_izquierda">⬅</button>
        <button class="btn" type="submit" id="btn_arriba">⬆</button>
        <button class="btn" type="submit" id="btn_none"></button>
        <button class="btn" type="submit" id="btn_derecha">➡</button>
        <button class="btn" type="submit" id="btn_abajo">⬇</button>
    </div>
    <!-- Scripts for game -->
    <script type="module" src="/scripts/gameMap01.js"></script>
    <script type="module" src="/scripts/gameMap02.js"></script>
    <!-- Modules -->
</body>

</html>